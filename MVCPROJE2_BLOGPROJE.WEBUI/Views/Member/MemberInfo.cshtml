@model Uye

@{
    ViewData["Title"] = "MemberInfo";
}

<h1>Kullanıcı Bilgileri</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KullaniciAdi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KullaniciAdi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MailAdresi)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MailAdresi)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KullaniciAciklama)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.KullaniciAciklama)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.KullaniciResim)
        </dt>
        <dd class="col-sm-10">
            <img src="~/resimler/@Html.DisplayFor(model => model.KullaniciResim)" width="100" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Update" asp-route-id="@Model.ID">Bilgilerinizi Güncelleme</a> |
    <a asp-controller="Home" asp-action="Index">Geri Dön</a> |
    <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#exampleModal">
        Üyeliği Sonlandır
    </button>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Hesabınızı Sonlandırmak İstediğinize Emin misiniz?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center">

                <a class="btn btn-outline-danger text-center" asp-action="Delete" asp-route-id="@Model.ID">Üyeliği Sonlandır</a>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>
